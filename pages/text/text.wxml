<!--pages/text/text.wxml-->

<!-- 1. 基本使用 -->
<text>Hello World\n</text>
<text>你好小程序\n</text>

<!-- 2. selectable: true -->
<!-- 默认情况下 text 中的文本长按不法被选中 -->
<text selectable>Hello CoderGoo</text>

<!-- 3. space: 决定文本空格大小 -->
<text>Hello World \n</text>
<text space="nbsp">Hello World \n</text>

<!-- ensp: 半个中文字体的大小 -->
<text space="ensp">Hello World \n</text>

<!-- emsp: 一个中文字体的大小 -->
<text space="emsp">Hello World \n</text>

<!-- 4. decode: 是否解码文本 -->
<text decode>&gt; 3</text>