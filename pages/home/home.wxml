<!--pages/home/home.wxml-->
<!-- 1. 小程序的数据绑定 -->
<view>Hello {{ msg }} </view>

<!-- 2. 小程序的数组列表 -->
<view wx:for="{{students}}">{{ item.name }} -- {{ item.age }}</view>

<!-- 3. 小程序的事件监听 -->
<view>当前计数:{{ count }}</view>
<button size="mini" bindtap="handleAdd">+</button>
<button size="mini" bindtap="handleSub">-</button>

<!-- 2. 获取用户信息的方式2 -->
<button size="mini" bindgetuserinfo="handleGetUserInfo" open-type="getUserInfo">授权信息</button>

<!-- 3. 获取用户信息的方式3-->
<open-data type="userNickName"></open-data>
<open-data type="userAvatarUrl"></open-data>