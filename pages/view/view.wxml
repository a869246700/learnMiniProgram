<!-- 1. view组件基本使用 -->
<!-- view 是块级元素,独占一行，通常用作容器 -->
<view class="box">哈哈哈</view>
<view>呵呵呵</view>

<!-- 2. hover-class：当用户按下组件时，显示的样式 -->
<view 
  class="box1" 
  hover-class="hover-view"
  hover-stay-time="{{0}}"
  hover-stop-propagation=""
>
  BOX1
</view>

<!-- 3. hover-stop-propagation: 防止冒泡 -->
<view class="box2" hover-class="box2-hover">
  <view 
  class="box1" 
  hover-class="hover-view"
  hover-stay-time="{{0}}"
  hover-stop-propagation
>
  BOX1
</view>
</view>

